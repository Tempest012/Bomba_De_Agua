<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bomba_De_Agua.RegistroUsuario"
             BackgroundColor="#F5F5F5"
             Title="RegistroUsuario">
    <VerticalStackLayout Padding="20">


        <Image Source="cloud_icon.png" 
               HeightRequest="50"
               HorizontalOptions="Center"/>


        <Label Text="Crear cuenta" 
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#2D2D2D"/>

        <Label Text="Ingresa tus datos para registrarte"
               FontSize="14"
               HorizontalOptions="Center"
               TextColor="#A3A3A4"/>


        <VerticalStackLayout Spacing="10" Margin="0,20,0,0">

            <Entry Placeholder="Nombre completo"
                   TextColor="Black"
                   PlaceholderColor="#A3A3A4"
                   BackgroundColor="White"
                   HeightRequest="50"
                   Margin="10"/>

            <Entry Placeholder="Correo electrónico"
                   Keyboard="Email"
                   TextColor="Black"
                   PlaceholderColor="#A3A3A4"
                   BackgroundColor="White"
                   HeightRequest="50"
                   Margin="10"/>

            <Entry Placeholder="Contraseña"
                   IsPassword="True"
                   TextColor="Black"
                   PlaceholderColor="#A3A3A4"
                   BackgroundColor="White"
                   HeightRequest="50"
                   Margin="10"/>

        </VerticalStackLayout>


        <Button Text="Registrarse"
                BackgroundColor="#FF6961"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50"
                FontAttributes="Bold"
                Margin="0,20,0,0"/>


        <Button Text="Continue with Google"
                BackgroundColor="White"
                TextColor="Black"
                BorderColor="Gray"
                BorderWidth="1"
                CornerRadius="10"
                HeightRequest="50"
                Margin="0,10,0,0"/>

    </VerticalStackLayout>

</ContentPage>